<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata" fqn="accountPresenceDashboard">
    <apiVersion>45.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Owlin Accounts: Presence Dashboard</masterLabel>
    <description>Bubble chart containing data for all user's accounts</description>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__HomePage</target>
        <target>lightning__RecordPage</target>
    </targets>
    <targetConfigs>
      <targetConfig targets="lightning__AppPage, lightning__HomePage, lightning__RecordPage">
          <property name="itemColor" type="String" default="#1f77b4"  label="Bubble Colour"/>
          <property name="textColor" type="String" default="#ffffff" label="Text Colour" />
          <property name="title" type="String" default="Your Accounts: Owlin News Presence" label="Title" />
          <property name="chartFilter" type="String" default="delta:month" label="Owlin Default Statistics Key (Chart Filter)" />
      </targetConfig>
  </targetConfigs>
</LightningComponentBundle>