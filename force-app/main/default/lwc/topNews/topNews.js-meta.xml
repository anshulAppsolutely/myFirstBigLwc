<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata" fqn="topNews">
    <apiVersion>45.0</apiVersion>
    <isExposed>true</isExposed>
    <description>Top news for the entities</description>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__HomePage</target>
        <target>lightning__RecordPage</target>

    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__AppPage, lightning__HomePage, lightning__RecordPage">
            <property name="topNewstitle" type="String" default="Your Accounts: Top News" label="Title" />
            <property name="tagColor" type="String" default="#1f77b4"  label="Tag Colour"/>
            <property name="headerColor" type="String" default="#1f77b4" label="Header Colour" />
            <property name="topNewsKey" type="String" default="topnews:month" label="Owlin Default Top News Filter Key" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>